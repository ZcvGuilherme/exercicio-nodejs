<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8" />
    <title>Novo Jogo</title>

    <link rel="stylesheet" href="/css/styles.css" />
</head>

<body>

    <h1>#Novo Jogo</h1>

    <form action="/jogos/novo" method="POST" class="form-container">

        <p>
            <label>TÃ­tulo</label><br>
            <input
                type="text"
                name="titulo"
                required
            />
        </p>

        <p>
            <label>Plataforma</label><br>
            <input
                type="text"
                name="plataforma"
                required
                placeholder="Ex.: PC, PS5, Switch"
            />
        </p>

        <p>
            <label>Dono (Amigo)</label><br>
            <select name="amigoId" required>
                <% amigos.forEach(a => { %>
                    <option value="<%= a.id %>">
                        <%= a.nome %> (<%= a.email %>)
                    </option>
                <% }) %>
            </select>
        </p>

        <p>
            <button type="submit" class="btn_editar">
                Salvar
            </button>

            <a href="/jogos">
                <button type="button" class="btn_excluir">
                    Cancelar
                </button>
            </a>
        </p>

    </form>

</body>
</html>