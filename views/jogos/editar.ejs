<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8" />
    <title>Editar Jogo</title>

    <link rel="stylesheet" href="/css/styles.css" />
</head>

<body>

    <h1>#Editar Jogo</h1>

    <form action="/jogos/editar/<%= jogo.id %>" method="POST" class="form-container">

        <p>
            <label>TÃ­tulo</label><br>
            <input
                type="text"
                name="titulo"
                value="<%= jogo.titulo %>"
                required
            />
        </p>

        <p>
            <label>Plataforma</label><br>
            <input
                type="text"
                name="plataforma"
                value="<%= jogo.plataforma %>"
                required
            />
        </p>

        <p>
            <label>Dono (Amigo)</label><br>
            <select name="amigoId" required>
                <% amigos.forEach(a => { %>
                    <option 
                        value="<%= a.id %>" 
                        <%= Number(a.id) === Number(jogo.amigoId) ? 'selected' : '' %>>
                        <%= a.nome %> (<%= a.email %>)
                    </option>
                <% }) %>
            </select>
        </p>

        <p>
            <button type="submit" class="btn_editar">
                Salvar
            </button>

            <a href="/jogos">
                <button type="button" class="btn_excluir">
                    Cancelar
                </button>
            </a>
        </p>

    </form>

</body>
</html>