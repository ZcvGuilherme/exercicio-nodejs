<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8" />
    <title>Amigos</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body>
    <h1>#Amigos</h1>
    <p>
        <button class="btn_topo"><a id="link_remover" href="/amigos/novo"> Cadastrar novo amigo </a></button> 
        <button class="btn_topo"><a id="link_remover" href="/jogos">Ver jogos</a></button>
        <button class="btn_topo"><a id="link_remover" href="/api/amigos">Ver JSON</a></button>
    </p>
    <table class="table table-success table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Email</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% amigos.forEach(a=> { %>
                <tr>
                    <td>
                        <%= a.id %>
                    </td>
                    <td>
                        <%= a.nome %>
                    </td>
                    <td>
                        <%= a.email %>
                    </td>
                    <td>
                        <button class="btn_editar"><a id="link_remover" href="/amigos/editar/<%= a.id %>" >Editar</a></button>
                        <form action="/amigos/excluir/<%= a.id %>" method="POST" style="display:inline;">
                            <button type="submit" class="btn_excluir">Excluir</button>

                        </form>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
</body>

</html>